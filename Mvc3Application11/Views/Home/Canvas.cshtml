    $(function () {

        var canvas1 = document.getElementById("chart");
        if (canvas1.getContext) {
            var ctx1 = canvas1.getContext("2d");

            var img = new Image();
            img.onload = function () {
                ctx1.drawImage(img, 0, 0);

                ctx1.beginPath();
                ctx1.moveTo(100, 25);
                ctx1.lineTo(150, 65);
                ctx1.lineTo(200, 90);
                ctx1.lineTo(250, 110);
                ctx1.lineTo(300, 125);
                ctx1.lineTo(350, 140);
                ctx1.lineTo(400, 150);

                ctx1.stroke();
            }

            img.src = "../../Content/images/122212_GiftCard_US_02.jpg";
        };

        var canvas2 = document.getElementById("drawingsth");
        if (canvas2 && canvas2.getContext) {
            var ctx2 = canvas2.getContext("2d");

            ctx2.beginPath();
            ctx2.moveTo(100, 100);
            ctx2.lineTo(100, 300);
            ctx2.lineTo(150, 300);
            ctx2.lineTo(150, 155);
            ctx2.lineTo(205, 155);
            ctx2.lineTo(205, 100);
            ctx2.closePath();

            ctx2.fillStyle = "#0099ff";
            ctx2.fill();    //order is important

            ctx2.lineWidth = 6;
            ctx2.lineJoin = "round";
            ctx2.strokeStyle = "#cccccc";
            ctx2.stroke();    //order is important
        };

        var canvas3 = document.getElementById("drawingSurface");
        if (canvas3.getContext) {
            var ctx3 = canvas3.getContext("2d");

            ctx3.beginPath();
            ctx3.moveTo(75, 50);
            ctx3.lineTo(75, 100);
            ctx3.lineTo(25, 100);

            ctx3.fill();
        };



    });
    
